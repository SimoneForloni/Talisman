<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="mainContainer" styleClass="main-container" stylesheets="@style.css" 
      xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="game.controllers.GameController">
   <children>
      
      <AnchorPane fx:id="gameArea" styleClass="game-viewport" VBox.vgrow="ALWAYS">
         <children>
            <VBox styleClass="quick-cmd-container" AnchorPane.leftAnchor="15.0" AnchorPane.topAnchor="15.0">
               <children>
                  <Button styleClass="cmd-btn-small" text="E" onAction="#onInventory" />
                  <Button styleClass="cmd-btn-small" text="Q" onAction="#onQuit" />
                  <Button styleClass="cmd-btn-small" text="Tab" onAction="#onStats" />
               </children>
            </VBox>
            <Label styleClass="version-tag" text="TALISMAN RPG V1.0" AnchorPane.rightAnchor="15.0" AnchorPane.topAnchor="10.0" />
         </children>
      </AnchorPane>

      <VBox styleClass="dashboard-main">
         <children>
            <HBox styleClass="dash-row">
               <children>
                  <VBox styleClass="player-card">
                     <children>
                        <Label styleClass="label-sub" text="PALADINO" />
                        <Label fx:id="nameLabel" styleClass="label-main-cyan" text="CARICAMENTO..." />
                     </children>
                  </VBox>

                  <HBox styleClass="health-container" HBox.hgrow="ALWAYS">
                     <children>
                        <Label styleClass="icon-red" text="â¤" />
                        <StackPane HBox.hgrow="ALWAYS">
                           <children>
                              <ProgressBar fx:id="hpBar" styleClass="health-bar-custom" />
                              <Label fx:id="hpTextLabel" styleClass="hp-text" text="0/0" />
                           </children>
                        </StackPane>
                     </children>
                  </HBox>

                  <HBox styleClass="coin-container">
                     <children>
                        <Label styleClass="icon-gold" text="ðŸª™" />
                        <Label fx:id="coinsLabel" styleClass="coin-text" text="0" />
                     </children>
                  </HBox>
               </children>
            </HBox>

            <HBox styleClass="dash-row" VBox.vgrow="ALWAYS">
               <children>
                  <VBox styleClass="stat-panel">
                     <children>
                        <Label styleClass="panel-title-small" text="STATISTICHE" />
                        <VBox styleClass="mini-bar-group">
                           <Label styleClass="label-sub" text="ATK / DEF" />
                           <ProgressBar fx:id="atkBar" progress="0.5" styleClass="mini-bar-blue" />
                           <ProgressBar fx:id="defBar" progress="0.5" styleClass="mini-bar-orange" />
                        </VBox>
                        <Region VBox.vgrow="ALWAYS" />
                        <HBox styleClass="spd-row">
                           <children>
                              <Label styleClass="label-sub" text="SPD" />
                              <Label fx:id="spdLabel" styleClass="label-main-cyan" text="1.0" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>

                  <VBox styleClass="log-panel" HBox.hgrow="ALWAYS">
                     <children>
                        <Label styleClass="panel-title-small-center" text="LOG DI GIOCO" />
                        <TextArea fx:id="logArea" styleClass="game-log-area" VBox.vgrow="ALWAYS" editable="false" wrapText="true" />
                     </children>
                  </VBox>

                  <VBox styleClass="actions-sidebar">
                     <children>
                        <Button fx:id="btnStats" onAction="#onStats" styleClass="icon-btn" text="âš™" />
                        <Button fx:id="btnInventory" onAction="#onInventory" styleClass="icon-btn" text="ðŸŽ’" />
                        <Button fx:id="btnMap" onAction="#onMap" styleClass="icon-btn" text="ðŸ—º" />
                        <Button fx:id="btnMove" onAction="#onMove" styleClass="icon-btn-primary" text="â–¶" />
                        <Button fx:id="btnQuit" onAction="#onQuit" styleClass="icon-btn-quit" text="âœ•" />
                     </children>
                  </VBox>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</VBox>